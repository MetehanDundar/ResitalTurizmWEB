@model Otel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_otel</title>
</head>
<body>
    <div class="card mb-1">
        <img class="card-img-top" src="~/template/img/@Model.ImageUrl" alt="" />
        <div class="card-body">
            <h5 class="card-title">@Model.OtelAdı</h5>
            <small class="text-muted">
                <i class="fas fa-lira-sign">@(Model.Fiyat + " ₺")</i>
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Otel" asp-action="Details" asp-route-id="@Model.OtelID" class="btn btn-primary btn-sm">Detaylar
                </a>
            <a asp-controller="Booking" asp-action="Index" asp-route-id="@Model.OtelID" class="btn btn-primary btn-sm">Rezervasyon</a>
        </div>
    </div>
</body>
</html>