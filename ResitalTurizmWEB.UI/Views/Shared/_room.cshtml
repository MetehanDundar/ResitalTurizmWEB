@model Room

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_room</title>
    
</head>
<body>
    <h2>@ViewBag.otel</h2>
    <h2>@ViewBag.SelectedOtel</h2>
    <div class="card mb-1">
        <img class="card-img-top" src="~/template/img/@Model.ImageUrl" alt="" />
        <div class="card-body">
            <h5 class="card-title">@Model.Otel.OtelAdı</h5>
            <small class="text-muted">
                <i class="fas fa-lira-sign">@(Model.Fiyat + " ₺")</i>
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Booking" asp-action="Create" asp-route-roomId="@Model.Id" class="btn btn-primary btn-sm">Rezervasyon</a>

        </div>
    </div>
</body>
</html>