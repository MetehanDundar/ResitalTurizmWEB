@model List<OrderListModel>

<h1>Rezervasyonlar</h1>
<hr />

@foreach (var order in Model)
{
    <table class="table table-bordered table-sm mb-3">
        <thead class="bg-primary">
            <tr>
                <td colspan="1">Order Id: #@order.OrderNumber</td>
                <th colspan="2">Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
            <tr>
                <td>@orderItem.Name</td>
                <td colspan="2">@orderItem.Price</td>
                <td>@orderItem.Quantity</td>
            </tr>
                
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">Müsteri Adı:</td>
                <td>@order.FirstName @order.LastName</td>
                <td rowspan="6" style="vertical-align:middle;">Total: @order.TotalPrice().ToString("c")</td>
            </tr>
            <tr>
                <td colspan="2">Adres:</td>
                <td>@order.Address</td>
            </tr>
            <tr>
                <td colspan="2">Mail:</td>
                <td>@order.Email</td>
            </tr>
            <tr>
                <td colspan="2">Telefon:</td>
                <td>@order.Phone</td>
            </tr>
            <tr>
                <td colspan="2">Sipariş Durumu:</td>
                <td>@order.OrderState</td>
            </tr>
            <tr>
                <td colspan="2">Ödeme Tipi:</td>
                <td>@order.PaymentType</td>
            </tr>
        </tfoot>
    </table>
    <hr />
}