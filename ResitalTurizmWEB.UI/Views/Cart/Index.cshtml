@model CartModel

<h1 class="h3">Sepetim</h1>
<hr />
@if (Model.CartItems.Count == 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning">
                Sepetinizde Ürün Yok
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="text-left">
                <h4>Rezervasyonlarım</h4>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Rezervasyon Id</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.BookingId</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity * item.Price)</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="bookingId" value="@item.BookingId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="text-left">
                <h4>Sepet Özeti</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Toplam Ödeme</th>
                        <th>@Model.TotalPrice().ToString("c")</th>
                    </tr>
                </tbody>
            </table>
            <div class="text-center" style="float:left;">
                <a href="/otels" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left fa-fw"></i>Diğer Fırsatlar..
                </a>
                <a href="/checkout" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-right fa-fw"></i>Ödeme
                </a>
            </div>
        </div>
    </div>
}
