@model IEnumerable<User>


@{
    ViewData["Title"] = "UserList";
}

@*Datatable.js ile tablolama yapmak için*@

@section Css
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css">
}

@section Scripts
{
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}



<div class="row">
    <div class="col-md-12">
        <h1>Kullanıcı Listesi</h1>
        <hr />
        <a class="btn btn-primary btn-sm" href="/admin/rolecreate">Kullanıcı Ekle</a>
        <hr />
        <table data-page-length="5" id="myTable" class="table table-bordered">
            <thead>
                <tr>
                    <td>FirstName</td>
                    <td>LastName</td>
                    <td>UserName</td>
                    <td>Email</td>
                    <td style="width:160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>
                                <a href="/admin/user/@item.Id" class="btn btn-primary btn-sm mr-2">Düzenle</a>

                                <form action="/admin/user/delete" method="post" style="display:inline;">
                                    <input type="hidden" name="UserId" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Kullanıcı Yok</h3>
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>




